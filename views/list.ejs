<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List </title>
    <link rel = "stylesheet" href ="css/styles.css">
</head>
<body>
    <div class ="box" id ="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class = "box" >
        <% newItems.forEach(function(elements){ %>
        <form method ="post" action ="/delete">
            <div class = "item">
            <input type ="checkbox" name ="checkboxed" value ="<%=elements.id%>"onChange="this.form.submit()"/>
            <p><%=elements.itemName%> </p>
            <input type ="hidden" name="hidlistName" value="<%=listTitle%>">
        </form>
        </div>
        <% }); %>
        <form class =" item" method="post" action ="/">
        <input type= "text"  name= "newItem" placeholder="NewItem">
        <button type ="submit" name = "list" value ="<%=listTitle%>">+</button>
        </form>
    </div>
    
</body>
</html>